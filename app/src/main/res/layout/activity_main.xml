<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ContentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shanw.ferav1.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/home_background"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/food_emblem_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="58dp"
            app:srcCompat="@drawable/food_emblem_home_text"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="45dp" />

        <EditText
            android:id="@+id/email_tb"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/food_emblem_text"
            android:layout_alignStart="@+id/food_emblem_text"
            android:layout_below="@+id/food_emblem_text"
            android:layout_marginTop="66dp"
            style="@style/App_EditTextStyle"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/password_tb"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/email_tb"
            android:layout_alignStart="@+id/email_tb"
            android:layout_below="@+id/email_tb"
            android:layout_marginTop="13dp"
            style="@style/App_EditTextStyle"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/email_tb"
            android:layout_alignStart="@+id/email_tb"
            android:layout_alignTop="@+id/email_tb"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="11dp"
            app:srcCompat="@drawable/username_logo" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"
            android:layout_alignTop="@+id/password_tb"
            android:layout_marginTop="11dp"
            app:srcCompat="@drawable/password_logo" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/password_tb"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/sign_in_background"
            android:onClick="LoginWebservice" />

        <TextView
            android:id="@+id/createNewAccnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/loginButton"
            android:layout_alignStart="@+id/loginButton"
            android:layout_below="@+id/loginButton"
            android:layout_marginTop="21dp"
            android:text="Create New Account" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/createNewAccnt"
            android:layout_alignBottom="@+id/createNewAccnt"
            android:layout_alignEnd="@+id/loginButton"
            android:layout_alignRight="@+id/loginButton"
            android:text="Forget Password" />


    </RelativeLayout>

</android.support.v7.widget.ContentFrameLayout>
